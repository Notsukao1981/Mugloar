@require "../../../../assets/stylus/mugloar.styl"
@require "../../../../assets/stylus/layout/wrapper.styl"

.wrapper
    &.-wrapper_block
        background radial-gradient(circle at top left, rgba(cGold4, 0.55) 20%, rgba(cShade3, 0.9))

.icon
    position absolute
    height 120px
    width 120px
    top 10px
    right 10px
    z-index 0
    color cOrange4

.title
    color cGold1

.attributes
    color cWhite2

.name
    margin 10px 120px 10px 0
    padding 10px
    font-size 14px
    line-height 18px
    max-height 100px
    overflow-y auto
    text-align center
    color cWhite3
    text-shadow cShade1 1px 1px 3px
    background linear-gradient(180deg, cGold3 10%, cGold5 65%, cGold3 105%)
    border 4px solid rgba(cGold4, 0.5)
    border-radius(8px)
