@import "../../../../assets/stylus/mugloar.styl"
@import "../../../../assets/stylus/menu/v-menu.styl"

.wrapper
    padding 20px
    background-color cbgGame
    border-radius(8px)
    box-shadow inset 0 0 15px 5px cShade4

.art
    display block
    margin 0 auto -120px auto
    height 900px

.intro
    font-family ffPressStartK
    font-size 14px
    line-height 150%
    color cWhite1
    margin 20px 0 0 0

    hr
        box-shadow 0 0 25px 2px cShade5

.setup-container
    padding 20px

.warning-text
    color cWhite2
    font-size 18px
    line-height 150%
    text-align center

    &:last-of-type
        margin-bottom 80px

.link
    color cGold1

.button
    padding 10px 20px
    margin 0 auto
    display block
    font-size 20px
    font-family ffPressStartK
    color cShade1

.controls-container
    padding 20px

.controls
    @extends .v-menu
    font-size 14px
    line-height 150%
