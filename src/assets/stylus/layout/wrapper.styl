.wrapper
    position relative
    padding 20px
    margin 0

    &.-wrapper_block
        margin 20px
        border 2px solid cShade3
        box-shadow 0px 0px 2px 2px cShade2, inset 0 0 10px cWhite1, inset 0 0 20px cShade1
        border-radius(8px)
        background radial-gradient(circle at top left, rgba(cViolet1, 0.88) 20%, rgba(cShade3, 0.9))
